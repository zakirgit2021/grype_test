pipeline {
  agent any
  stages {
  
  stage('Delete image if exists') {
      steps {
        sh '''
          docker rmi java-docker:latest
        '''
      }
    }
    stage('Create image') {
      steps {
        sh 'docker build --tag grype-test:latest .'
      }
    }
    stage('Scan the Image ') {
      steps {
        sh 'grype grype-test:latest --scope AllLayers --fail-on=critical'
      }
    }
    stage('Confimtion print ') {
      steps {
        echo 'if I made it here, no critical items were found'
      }
    }
  }
}
