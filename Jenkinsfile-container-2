pipeline {
  agent any
  stages {
    stage('Create container image') {
      steps {
        sh 'docker build --tag grype-test:latest .'
      }
    }
    stage('Run Vulnerability Scan') {
      steps {
        sh 'grype grype-test:latest --scope AllLayers --fail-on=critical'
      }
    }
    stage('Finally done') {
      steps {
        echo 'if I made it here, no critical items were found'
      }
    }
  }
}
